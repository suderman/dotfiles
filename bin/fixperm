#!/bin/bash

# 2014 Jon Suderman
# https://github.com/suderman/dotfiles

pwduser=$(ls -ld $(pwd) | awk '{print $3}')
pwdgroup=$(ls -ld $(pwd) | awk '{print $4}')

# Change owner and fix permissions
sudo chown -R $pwdusr:$pwdgroup ./*
sudo chmod -R 775 ./*

