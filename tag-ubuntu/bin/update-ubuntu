# gem install rails
#
# npm install -g bower
# npm install -g grunt
# npm install -g sng
# npm install -g less
# npm install -g coffee-script
# npm install -g uglify-js
# npm install -g importer
# npm install -g tldr
#
# pip install Cheetah
