#!/bin/bash

# 2015 Jon Suderman
# https://github.com/suderman/dotfiles

# Helper methods for prettier shell scripting - http://suderman.github.io/shelper
eval "$(cat ~/.local/share/shelper.sh || curl suderman.github.io/shelper/shelper.sh)"


# ▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀
# ▀▄▀▄▀▄   Bootstrap my system   ▄▀▄▀▄▀
# ▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀
#
has brew || ruby -e "$(curl -fsSL raw.githubusercontent.com/Homebrew/linuxbrew/go/install)"


# ▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀

sudo apt-get update --fix-missing
sudo apt-get upgrade
brew update
brew upgrade

# ▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀
# ▀▄▀▄▀▄     Things I like       ▄▀▄▀▄▀
# ▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀
#
has ~/.linuxbrew/bin/zsh         || brew install zsh
has ~/.linuxbrew/bin/curl        || brew install curl
has node                         || sudo apt-get -y install nodejs
has npm                          || sudo apt-get -y install npm
has sshd                         || sudo apt-get -y install openssh-server
has ssh                          || sudo apt-get -y install openssh-client
has sshpass                      || sudo apt-get -y install sshpass
has zsh                          || sudo apt-get -y install zsh
has htop                         || sudo apt-get -y install htop
has tmux                         || brew install tmux
has ranger                       || brew install ranger
has ~/.linuxbrew/bin/vim         || brew install vim
has chruby-exec                  || brew install chruby
has ruby-install                 || brew install ruby-install
has ag                           || brew install ag


# ▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀▄▀

