# Shortcuts
set {
  $scripts        ~/.config/sway/scripts
  $wallpapers     ~/.config/sway/wallpapers
  $wayland        --enable-features=UseOzonePlatform --ozone-platform=wayland
  $wayland_scale  $wayland --force-device-scale-factor=1.5
}

# Keys
set {

  # Key Symbols
  $Super      Mod4
  $Alt        Mod1
  $mod Mod4
  $alt Mod1

  # Key Codes
  $Caps_Lock  66
  $Shift_L    50
  $Shift_R    62
  $Super_L    37
  $Alt_L      133
  $Control_L  64
  $Control_R  108
  $Super_R    105

}

include ~/.config/sway/config.d/*
include /etc/sway/config.d/*
exec_always "systemctl --user import-environment; systemctl --user start sway-session.target"
