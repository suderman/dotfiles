# Start a terminal
bindsym $Super+Return $term
bindsym $Super+Backslash $browser
bindsym $Super+d $menu
# bindsym $mod+Space exec ~/.config/bin/app-launcher

# Kill focused window
bindsym $Super+q kill

#### Window Switcher
bindsym $Super+Delete  exec swayr quit-window
# bindsym $Super+Grave   exec swayr prev-window all-workspaces
# bindsym $Super+Tab     exec swayr next-window all-workspaces
bindsym $Super+Grave   workspace prev_on_output
bindsym $Super+Tab     workspace next_on_output
bindsym $Super+Next    exec swayr next-window all-workspaces
bindsym $Super+Prior   exec swayr prev-window all-workspaces
# bindsym $Super+Space   exec swayr switch-workspace-or-window
bindsym $Super+c       exec swayr execute-swaymsg-command
bindsym $Super+Shift+c exec swayr execute-swayr-command

bindsym $Super+Period exec swayr prev-window all-workspaces, exec nc_flash_window
bindsym $Super+Comma  exec swayr next-window all-workspaces, exec nc_flash_window
bindsym $Super+Slash  exec swayr switch-to-urgent-or-lru-window, exec nc_flash_window

bindcode $Super+$Control_R   exec swayr switch-workspace-or-window
bindcode $Super+$Alt_R   exec swayr switch-workspace-or-window
# bindcode $Super+$Alt_L   exec swayr switch-workspace-or-window

# bindcode $Super+$Control_R exec swaymsg mode switcher, exec swayr switch-workspace-or-window
# mode switcher {
#   bindcode $Super+$Control_R ydotool key KEY_ESC
#   mode default
# }

#### Window Launcher
# bindsym $Super+Space exec wofi --show drun --allow-images --allow-markup --insensitive --layer=overlay --term=alacritty
bindsym $Super+Space exec wofi --show drun,run
bindsym $Super+Alt+Space exec wofi --show run
bindsym Control+Space exec ulauncher
# bindsym $Super+Space exec rofi -show drun --allow-images --allow-markup

# Reload the configuration file
# bindsym $Super+Ctrl+Shift+c reload
bindsym $Super+r reload

# Move your focus around
bindsym $Super+h focus left
bindsym $Super+j focus down
bindsym $Super+k focus up
bindsym $Super+l focus right

# bindsym $Super+y exec swaymsg -t get_tree | jq '.. | (.nodes? // empty)[] | select(.focused==true) | {name}' | swaynag -m "Window Info" -l
# bindsym 5 exec ydotool type 666
# bindsym $Super+y exec ydotool click right

# Resize the focused window with the same, but add Shift
set $amount 50px
# bindsym $Super+Shift+h resize shrink width  $amount
# bindsym $Super+Shift+j resize grow   height $amount
# bindsym $Super+Shift+k resize shrink height $amount
# bindsym $Super+Shift+l resize grow   width  $amount
bindsym $Super+Alt+h resize shrink width  $amount
bindsym $Super+Alt+j resize grow   height $amount
bindsym $Super+Alt+k resize shrink height $amount
bindsym $Super+Alt+l resize grow   width  $amount

# Move the focused window with the same, but add Ctrl+Shift
# bindsym $Super+Shift+Ctrl+h move left
# bindsym $Super+Shift+Ctrl+j move down
# bindsym $Super+Shift+Ctrl+k move up
# bindsym $Super+Shift+Ctrl+l move right
bindsym $Super+Alt+Ctrl+h move left
bindsym $Super+Alt+Ctrl+j move down
bindsym $Super+Alt+Ctrl+k move up
bindsym $Super+Alt+Ctrl+l move right
    
# Move focused window to next empty workspace
bindsym $Super+Alt+Ctrl+Tab exec $scripts/empty --move next 1

# Workspaces
bindsym $Super+bracketleft workspace prev_on_output
bindsym $Super+bracketright workspace next_on_output

# Switch to workspace
bindsym { 
  $Super+1 workspace number 1
  $Super+2 workspace number 2
  $Super+3 workspace number 3
  $Super+4 workspace number 4
  $Super+5 workspace number 5
  $Super+6 workspace number 6
  $Super+7 workspace number 7
  $Super+8 workspace number 8
  $Super+9 workspace number 9
  $Super+0 workspace number 10
}

# Move focused container to workspace
bindsym $Super+Alt+Ctrl+1 move container to workspace number 1,  workspace number 1
bindsym $Super+Alt+Ctrl+2 move container to workspace number 2,  workspace number 2
bindsym $Super+Alt+Ctrl+3 move container to workspace number 3,  workspace number 3
bindsym $Super+Alt+Ctrl+4 move container to workspace number 4,  workspace number 4
bindsym $Super+Alt+Ctrl+5 move container to workspace number 5,  workspace number 5
bindsym $Super+Alt+Ctrl+6 move container to workspace number 6,  workspace number 6
bindsym $Super+Alt+Ctrl+7 move container to workspace number 7,  workspace number 7
bindsym $Super+Alt+Ctrl+8 move container to workspace number 8,  workspace number 8
bindsym $Super+Alt+Ctrl+9 move container to workspace number 9,  workspace number 9
bindsym $Super+Alt+Ctrl+0 move container to workspace number 10, workspace number 10

# Make the current focus fullscreen
bindsym $Super+z fullscreen

# Toggle the current focus between tiling and floating mode
bindsym $Super+o floating toggle

# Swap focus between the tiling area and the floating area
bindsym $Super+Alt+o focus mode_toggle

# Move focus to the parent container
bindsym $Super+p focus parent

# Toggle between tabbed or shuffled tiles
bindsym $Super+t exec swayr toggle-tab-shuffle-tile-workspace exclude-floating

bindsym $Super+y exec swayr move-focused-to-workspace

# Move the currently focused window to the scratchpad
bindsym $Super+Alt+minus move scratchpad
bindsym $Super+Minus scratchpad show

# Media keys
bindsym XF86AudioPlay                exec playerctl play-pause
bindsym XF86AudioNext                exec playerctl next
bindsym XF86AudioPrev                exec playerctl previous

# Volume control
bindsym XF86AudioRaiseVolume         exec $scripts/volume up
bindsym XF86AudioLowerVolume         exec $scripts/volume down
bindsym XF86AudioMute                exec $scripts/volume mute

# Scale control
bindsym $Super+XF86AudioRaiseVolume         exec $scripts/scale up
bindsym $Super+XF86AudioLowerVolume         exec $scripts/scale down
bindsym $Super+XF86AudioMute                exec $scripts/scale toggle

# Display brightness
bindsym XF86MonBrightnessUp          exec $scripts/brightness up
bindsym XF86MonBrightnessDown        exec $scripts/brightness down
bindsym $Super+XF86MonBrightnessUp   exec $scripts/wlsunset-toggle
bindsym $Super+XF86MonBrightnessDown exec $scripts/wlsunset-toggle

# Screenshot via grim/slurp
# bindsym Print exec grim -g "$(slurp)" - | wl-copy
bindsym Print exec grim -g "$(slurp)" - | swappy -f -

# bindsym XF86AudioMedia exec $scripts/scale-toggle

# Alt modes
set $MODE_FOCUS  " FOCUS"
set $MODE_RESIZE " RESIZE"
set $MODE_MOVE   " MOVE"
bindcode $Control_R mode $MODE_FOCUS
