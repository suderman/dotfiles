# Apps
set {

  $term exec alacritty
  $editor exec nvim
  $browser exec firefox-developer-edition
  $menu exec $term --class=launcher -e sway-launcher-desktop

}



for_window {
  [shell="xwayland"] title_format "%title [XWayland]"
  #[app_id="firefox"] in--enable-features=UseOzonePlatform --ozone-platform=waylandhibit_idle fullscreen
  [app_id="mpv"] inhibit_idle fullscreen
  [app_id="Vivaldi-stable"] inhibit_idle fullscreen
  [app_id="ulauncher"] floating enable, border none
  [window_role="pop-up"] floating enable
  [window_role="bubble"] floating enable
  [window_role="dialog"] floating enable
  [window_type="dialog"] floating enable
  # [app_id="1Password"] floating enable
  [class="Spotify"] floating enable
  # terminal
  # [app_id=$term_id] move to scratchpad, scratchpad show, $t_pos
  # [app_id=$other_term_id] move to scratchpad, scratchpad show, t_pos


}

assign [class="1Password"] workspace number 1
assign [class="Slack"] workspace number 2
assign [app_id="appimagekit_3a48058ef277d45ae2228089429c0259-Telegram_Desktop"] workspace number 2
assign [class="discord"] workspace number 2
assign [app_id="brave-browser"] workspace number 4
assign [app_id="plexamp"] workspace number 5
assign [app_id="tv.plex.plexmediaplayer"] workspace number 6

for_window [app_id="^launcher$"] floating enable, sticky enable, resize set 30 ppt 60 ppt, border pixel 10

bindsym $Super+Question exec $scripts/yad-keybindings
for_window [app_id="yad"] floating enable

