mode $MODE_FOCUS {

  # Return to default mode
  # bindcode $Control_R mode default
  bindcode $Control_R mode $MODE_RESIZE

  # [m] switch to RESIZE mode
  # bindsym m mode $MODE_RESIZE

  # [hjkl] focus container
  bindsym h     focus left
  bindsym j     focus down
  bindsym k     focus up
  bindsym l     focus right
  bindsym Left  focus left
  bindsym Down  focus down
  bindsym Up    focus up
  bindsym Right focus right

  # [0-9] focus workspace
  bindsym 1 workspace number 1
  bindsym 2 workspace number 2
  bindsym 3 workspace number 3
  bindsym 4 workspace number 4
  bindsym 5 workspace number 5
  bindsym 6 workspace number 6
  bindsym 7 workspace number 7
  bindsym 8 workspace number 8
  bindsym 9 workspace number 9
  bindsym 0 workspace number 10
  bindsym bracketleft workspace prev_on_output
  bindsym bracketright workspace next_on_output

  # [<] prev or [>] next window
  bindsym Period exec swayr prev-window all-workspaces
  bindsym Comma  exec swayr next-window all-workspaces

  # Last window
  bindsym Slash  exec swayr switch-to-urgent-or-lru-window

  # Escape mode
  bindsym  Escape     mode default
  bindsym  i          mode default
  bindcode $Super_L   mode default
  bindcode $Super_R   mode default
  bindcode $Caps_Lock mode default
  bindcode $Alt_L     mode default
  bindcode $Control_L mode default

  # [Return] new term
  bindsym Return exec $term

  # [\] new browser
  bindsym Backslash exec $browser

  # [q]uit window
  bindsym q kill

  # toggle la[y]out
  bindsym y layout toggle split

  # [t]abbed or stacking layout
  bindsym t layout tabbed
  bindsym Shift+t layout stacking

  # toggle fullscreen
  bindsym z fullscreen

  # toggle floating
  bindsym o floating toggle
  bindsym Shift+o focus mode_toggle

  # [p]arent focus
  bindsym p focus parent
  
}
