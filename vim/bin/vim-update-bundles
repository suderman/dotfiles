#!/bin/bash
#
# 2015 Jon Suderman
# https://github.com/suderman/local
echo "-> Updating vim bundles"

# Set HOME if passed
[ -z "$1" ] || HOME="$1"

# Expire last update timestamp
rm -f $HOME/.vim/bundle/last_update 

# Open vim so it will update, then quit
yes | HOME=$HOME vim -i NONE -c 'let $HOME = "$HOME"' -c quitall
