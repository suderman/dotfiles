set editing-mode vi                                            

# vi settings                                         
$if mode=vi                
    # normal mode                           
    set keymap vi-command                                 
    "gg": beginning-of-history
    "h": backward-char
    "l": forward-char         
    "G": end-of-history
    # insert mode             
    set keymap vi-insert                          
